---
interface Props {
  title: string;
  content: string[];
  features?: string[];
  process?: Array<{ step: string; description: string }>;
}

const { title, content, features, process } = Astro.props;
---

<section class="py-12 md:py-20">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-white text-center">
        {title} <span class="text-primary">Hakkında</span>
      </h2>
      
      <div class="space-y-6 text-gray-300 leading-relaxed mb-12">
        {content.map((paragraph) => (
          <p class="text-lg">{paragraph}</p>
        ))}
      </div>

      {features && features.length > 0 && (
        <div class="mb-12">
          <h3 class="text-2xl font-semibold mb-6 text-white">Özellikler</h3>
          <div class="grid md:grid-cols-2 gap-4">
            {features.map((feature) => (
              <div class="flex items-start gap-3 bg-dark-light p-4 rounded-md border border-dark-lighter">
                <span class="text-primary text-xl flex-shrink-0">✓</span>
                <p class="text-gray-300">{feature}</p>
              </div>
            ))}
          </div>
        </div>
      )}

      {process && process.length > 0 && (
        <div>
          <h3 class="text-2xl font-semibold mb-6 text-white">Süreç</h3>
          <div class="space-y-4">
            {process.map((item, index) => (
              <div class="flex gap-4 bg-dark-light p-6 rounded-md border border-dark-lighter">
                <div class="flex-shrink-0 w-10 h-10 bg-primary text-dark rounded-full flex items-center justify-center font-bold">
                  {index + 1}
                </div>
                <div>
                  <h4 class="text-xl font-semibold mb-2 text-white">{item.step}</h4>
                  <p class="text-gray-300">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>


