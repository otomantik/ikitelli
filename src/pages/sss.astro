---
import BaseLayout from '../layouts/BaseLayout.astro';
import FAQ from '../components/FAQ.tsx';

const pageTitle = 'Sıkça Sorulan Sorular | İkitelli Turbocu | Turbo Hizmetleri SSS';
const pageDescription = 'Turbo tamiri, revizyon, satış ve servis hizmetlerimiz hakkında sıkça sorulan sorular. Turbo arızası, garanti, fiyatlandırma ve daha fazlası.';
const canonical = 'https://www.ikitelliturbocu.com/sss';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <head>
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content="https://www.ikitelliturbocu.com/images/og-image.jpg" />
    <meta property="og:locale" content="tr_TR" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content="https://www.ikitelliturbocu.com/images/og-image.jpg" />
    
    <!-- Breadcrumb Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Anasayfa",
          "item": "https://www.ikitelliturbocu.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Sıkça Sorulan Sorular",
          "item": canonical
        }
      ]
    })} />
    
    <!-- FAQPage Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Turbo arızası nasıl anlaşılır?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Turbo arızasının belirtileri arasında siyah veya mavi duman çıkması, güç kaybı, aşırı gürültü, yağ tüketiminde artış ve motor arıza lambasının yanması sayılabilir. Ücretsiz arıza tespiti için bize ulaşabilirsiniz."
          }
        },
        {
          "@type": "Question",
          "name": "Turbo revizyonu ne kadar sürer?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Turbo revizyon süresi arızanın durumuna göre değişir. Genellikle 1-2 gün içinde tamamlanır. Acil durumlarda aynı gün teslim imkânımız da bulunmaktadır."
          }
        },
        {
          "@type": "Question",
          "name": "Garanti var mı?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Evet, tüm revizyon ve tamir işlemlerimizde yazılı garanti sunuyoruz. Garanti süresi ve kapsamı hakkında detaylı bilgi için bize ulaşabilirsiniz."
          }
        },
        {
          "@type": "Question",
          "name": "Fiyat nasıl belirleniyor?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Fiyatlandırma turbo markası, arıza tipi ve gerekli yedek parçalara göre belirlenir. Öncelikle ücretsiz arıza tespiti yapıyoruz, ardından şeffaf bir şekilde fiyat teklifi sunuyoruz."
          }
        },
        {
          "@type": "Question",
          "name": "Hangi marka turboları tamir ediyorsunuz?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Tüm marka turboları (Garrett, BorgWarner, Holset, IHI, Mitsubishi, Cummins, KKK vb.) tamir ve revizyon hizmeti veriyoruz. Uzman ekibimiz her marka için deneyimlidir."
          }
        },
        {
          "@type": "Question",
          "name": "İstanbul dışına parça gönderimi yapıyor musunuz?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Evet, Türkiye'nin her yerine revizyonlu turbo gönderimi yapıyoruz. Kargo süresi ve fiyat bilgisi için bize ulaşabilirsiniz."
          }
        },
        {
          "@type": "Question",
          "name": "Ödeme şekli nedir?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Nakit, kredi kartı ve banka havalesi ile ödeme kabul ediyoruz. Detaylı bilgi için bize ulaşabilirsiniz."
          }
        },
        {
          "@type": "Question",
          "name": "Çalışma saatleri nelerdir?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Her gün (Pazar dahil) 09:00 - 20:00 saatleri arasında hizmet veriyoruz. Acil durumlar için WhatsApp üzerinden 7/24 ulaşabilirsiniz."
          }
        }
      ]
    })} />
  </head>

  <!-- Hero Section -->
  <section class="relative pt-0 pb-8 md:py-20 bg-gradient-to-br from-dark via-dark-light to-dark">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 md:mb-6 text-white">
          Sıkça Sorulan <span class="text-primary">Sorular</span>
        </h1>
        <p class="text-lg sm:text-xl text-gray-300">
          Turbo hizmetlerimiz hakkında merak ettikleriniz.
        </p>
      </div>
    </div>
  </section>

  <FAQ client:load />
</BaseLayout>

